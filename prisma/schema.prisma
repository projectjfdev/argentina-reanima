generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  username String @unique
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model News {
  id Int @id @default(autoincrement())
  title       String
  imageUrl    String?
  imagePublicId String?
  description String
  redirect    String
  category    String
  dateNew     DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Course {
  id        Int       @id @default(autoincrement())
  title     String
  category  String
  lessons   Lesson[]  // Relaci√≥n 1 a N
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Lesson {
  id        Int      @id @default(autoincrement())
  title     String
  href      String
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  courseId  Int
}